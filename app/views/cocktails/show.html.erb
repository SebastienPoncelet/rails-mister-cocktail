<h2><%= @cocktail.name %></h2>

<div class='row'>
  <div class="col-xs-12 col-sm-6 col-md-4">

    <div class="thumbnail">
      <img src="<%= @cocktail.pic %>" alt="<%= @cocktail.name %>">

    </div>

  </div>

  <div class="col-xs-12 col-sm-6 col-md-8">

    <h3>Ingredients</h3>

    <p>
      <ul>
        <% @cocktail.doses.each do |dose|%>
          <li>
            <%= Ingredient.find(dose.ingredient_id).name %>
            (<%= dose.qty_raw.strip %>)
          </li>
        <% end %>
      </ul>
      <%= link_to "Add ingredient", new_cocktail_dose_path(@cocktail), class: "btn" %>
    </p>

    <hr>

    <h3>Preparation</h3>

    <% steps = @cocktail.description
      .split(/\d[.)]/)
      .reject { |el| el.empty? }
      .map { |el| el.strip } %>

    <p>
      <% if steps.length < 2 %>
        <%= @cocktail.description %>
      <% else %>
        <ol>
          <% steps.each do |step| %>
            <li><%= step %></li>
          <% end %>
        </ol>
      <% end %>
      </p>
  </div>

  <div class="col-xs-12" style='margin-top: 25px'>
    <%= link_to "Back to cocktails", cocktails_path, class: "btn btn-primary" %>
  </div>

</div>

